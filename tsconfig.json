{
    "compilerOptions": {
      "downlevelIteration": true,
      "allowJs": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "jsx": "react",
      "lib": ["dom", "es6", "es2015", "es5"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "plugins": [
        {
          "name": "tslint-language-service"
        }
      ],
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es5",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "preserveConstEnums": false
    },
    "paths": {
        "*": [
          "*",
          "../types/*"
        ]
    },
    "exclude": [
      "node_modules"
    ]
  }
  